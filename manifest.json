{
    "manifest_version": 3,
    "name": "Readr.",
    "description": "A more comprehensive way to sort and save your reading lists - because you're not the average readr.",
    "permissions": ["storage", "activeTab", "contextMenus"],
    "version": "1.0",
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "user_page.html",
      "default_icon": {
        "16": "icons/readr_logo.png",
        "48": "icons/readr_logo.png",
        "128": "icons/readr_logo.png"
      }
    },
    "icons": {
      "16": "icons/readr_logo.png",
      "48": "icons/readr_logo.png",
      "128": "icons/readr_logo.png"
    }
  }
  